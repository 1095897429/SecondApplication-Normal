<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/next_btn"
        android:layout_centerInParent="true"
        android:text="下一步"
        android:textSize="18sp"
        android:textColor="#0162FF"
        android:background="@drawable/shape_delete_bg"
        android:padding="12dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/back"
        android:src="@mipmap/back_icon_white"
        android:padding="10dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <LinearLayout
        android:layout_above="@+id/next_btn"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="登录"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/phone_ed"
            android:hint="请输入你的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@null"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <TextView
            android:id="@+id/weixinLoging"
            android:text="微信"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:drawableTop="@mipmap/share_weixin"
            android:drawablePadding="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/qqLogin"
            android:text="qq登录"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:drawableTop="@mipmap/share_qq"
            android:drawablePadding="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weiboLogin"
            android:text="微博登录"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:drawableTop="@mipmap/share_weibo"
            android:drawablePadding="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>